<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="assets/css/theme.css" rel="stylesheet" />
    <style>

        body{
            padding: 3rem;
        }
        h1{
            margin-bottom: 3.5%;
        }

        .elem{
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
            transition: transform .2s;
            width: 90%;
            height: 80%;
            padding: 20px;
            height: 7rem;
            margin: auto ;
            margin-bottom: 10px;
        }
        .elem:hover {
            -ms-transform: scale(1.5); 
            -webkit-transform: scale(1.5); 
            transform: scale(1.1); 
        }
        .column {
        float: left;
        width: 33%;
    }

    .first {
        text-align: left;
    }

    .second{
        text-align: center;
    }

    .third{
        text-align: right;
    }
    </style>

</head>
<body>
<main>

    <div style="height: 100rem;">
        <h1>Active Routes</h1>
        <% arr.forEach(elem =>{ %>

            <a href="/viewRoute/<%= elem.routeName%>">
                <div class="elem">
                    <div class="column first">
                        <h2><%=elem.src %></h2>
                        <h5 style="color: rgb(153, 219, 54);">Source</h5>
                    </div>
                    <div class="column second">
                        <h3>
                            <%= elem.routeName %>
                        </h3>
                    </div>
                    <div class="column third">
                        <h2><%=elem.dest %></h2>
                        <h5 style="color: red;">Destination</h5>
                    </div>
                </div>
            </a>

        <% }) %>
    </div>

</main>
</body>
</html>